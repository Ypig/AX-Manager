<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/cardView"
	android:layout_width="match_parent"
	android:clickable="true"
	app:cardCornerRadius="12dp"
	android:foreground="?android:attr/selectableItemBackground"
	android:layout_height="wrap_content"
	android:layout_gravity="center"
	app:cardUseCompatPadding="true">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<Button
				android:layout_height="@dimen/list_button_height"
				android:layout_width="match_parent"
				android:text="复制"
				android:layout_weight="1"
				android:paddingLeft="10dp"
				android:drawableLeft="@mipmap/copy"
				android:background="?android:attr/selectableItemBackground"
				android:id="@+id/copy"/>

			<Button
				android:layout_height="@dimen/list_button_height"
				android:layout_width="match_parent"
				android:background="?android:attr/selectableItemBackground"
				android:text="移动"
				android:paddingLeft="10dp"
				android:drawableLeft="@mipmap/move"
				android:layout_weight="1"
				android:id="@+id/move"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<Button
				android:layout_height="@dimen/list_button_height"
				android:background="?android:attr/selectableItemBackground"
				android:layout_width="match_parent"
				android:text="重命名"
				android:paddingLeft="10dp"
				android:drawableLeft="@mipmap/rename"
				android:layout_weight="1"/>

			<Button
				android:layout_height="@dimen/list_button_height"
				android:background="?android:attr/selectableItemBackground"
				android:layout_width="match_parent"
				android:text="删除"
				android:paddingLeft="10dp"
				android:drawableLeft="@mipmap/delete"
				android:layout_weight="1"
				android:id="@+id/delete"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<Button
				android:layout_height="@dimen/list_button_height"
				android:layout_width="match_parent"
				android:text="压缩"
				android:paddingLeft="10dp"
				android:drawableLeft="@mipmap/com"
				android:background="?android:attr/selectableItemBackground"
				android:layout_weight="1"
				android:id="@+id/Compress"/>

			<Button
				android:layout_height="@dimen/list_button_height"
				android:layout_width="match_parent"
				android:background="?android:attr/selectableItemBackground"
				android:text="属性"
				android:paddingLeft="10dp"
				android:drawableLeft="@mipmap/info"
				android:layout_weight="1"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<Button
				android:layout_height="@dimen/list_button_height"
				android:layout_width="match_parent"
				android:text="分享"
				android:paddingLeft="10dp"
				android:drawableLeft="@mipmap/share"
				android:background="?android:attr/selectableItemBackground"
				android:layout_weight="1"/>

			<Button
				android:layout_height="@dimen/list_button_height"
				android:layout_width="match_parent"
				android:background="?android:attr/selectableItemBackground"
				android:text="打开方式"
				android:paddingLeft="10dp"
				android:drawableLeft="@mipmap/open"
				android:layout_weight="1"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal">

			<Button
				android:layout_height="@dimen/list_button_height"
				android:layout_width="match_parent"
				android:background="?android:attr/selectableItemBackground"
				android:text="添加书签"
				android:paddingLeft="10dp"
				android:drawableLeft="@mipmap/book"
				android:layout_weight="1"/>

			<Button
				android:layout_height="@dimen/list_button_height"
				android:background="?android:attr/selectableItemBackground"
				android:layout_width="match_parent"
				android:text="加密"
				android:paddingLeft="10dp"
				android:drawableLeft="@mipmap/lock"
				android:layout_weight="1"/>

		</LinearLayout>

	</LinearLayout>

</android.support.v7.widget.CardView>

